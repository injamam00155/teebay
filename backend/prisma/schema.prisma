generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  address   String
  phone     String
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
  products       Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  productTitle String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  description String
  price       Float
  rent        Float
  users       User[]
}

